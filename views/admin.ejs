<body>

    <%- include('./partials/adminnav.ejs') %>


    <div class="container">
        <div class="sidebar">
            <div class="menu-icon">
                <i class="fas fa-bars"></i>
            </div>
            <h2>Admin Panel</h2>
            <ul>
                <li><a href="/admin"><i class="fas fa-tachometer-alt"></i><span>Dashboard</span></a></li>
                <li><a href="/admin/addProduct"><i class="fas fa-plus-circle"></i><span>Add Product</span></a></li>
                <li><a href="/admin/editProduct"><i class="fas fa-edit"></i><span>Edit Product</span></a></li>
                <li><a href="/admin/deleteProduct"><i class="fas fa-trash"></i><span>Delete Product</span></a></li>
                <li><a href="/admin/viewProducts"><i class="fas fa-eye"></i><span>View Products</span></a></li>
            </ul>
        </div>
        <div class="main-content">
            <div class="prods-title">
                <h2 class="view">Products</h2> 
                <button type="button" class="btn btn-primary styled-button">Primary</button> 
            </div>
            <div class="prod_grid">
                <% if (typeof data !== 'undefined' && data.length > 0) { %>
                    <% data.forEach(item => { %>
                        <% if (item.name && item.price && item.description) { %>       
                            <div class="pro">
                                <a href="/details/<%= item._id %>">
                                    <img class="proImg" src="<%= item.image || '/uploads/default.jpg' %>" alt="<%= item.name %> Image">
                                </a>
                                <div class="des">
                                    <span><%= item.brand %></span>
                                    <h5><%= item.name %></h5>
                                    <div class="stars">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                    </div>
                                    <h4><p style="display: inline; font-size: 0.8em;">EGP </p><%= item.price %></h4>
                                </div>
                                <div class="actions">
                                    <a href="/edit/<%= item._id %>" class="edit-btn">Edit</a>
                                    <a href="/delete/<%= item._id %>" class="delete-btn">Delete</a>
                                </div>
                            </div>
                        <% } %>
                    <% }) %>
                <% } else { %>
                    <p>No results available.</p>
                <% } %>  
            </div>
        </div>
    </div>
    
    
