    <%- include('./partials/nav.ejs') %>


    <section id="product1" class="section-box">
        <h2>Showing <%=data.length%> products for: <%= category%></h2>
        <p>Shop Now!</p>
        <div class="prod_grid">                       
            <% if (typeof data !== 'undefined' && data.length > 0) { %>
                <% data.forEach(item => { %>
                    <% if (item.name && item.price && item.description) { %>       
                        <div class="pro">
                            <a href="/details/<%= item._id %>"> <!-- Link wraps the image -->
                                <img class="proImg" src="<%= item.image || '/uploads/default.jpg' %>" alt="<%= item.name %> Image">
                            </a>
                            <div class="des">
                                <span><%= item.brand %></span>
                                <h5><%= item.name %></h5>
                                <div class="stars">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                </div>
                                <h4><p style="display: inline; font-size: 0.8em;">EGP </p><%= item.price %></h4>
                            </div>
                            <a href="/details/<%= item._id %>"><i class="fal fa-shopping-cart cart"></i></a>
                        </div>
                    <% } %>
                <% }) %>
            <% } else { %>
                <p>No results available.</p>
            <% } %>  
        </div>
        <% if (totalPages > 1) { %>
            <div class="pagination">
                <% if (currentPage > 1) { %>
                    <a href="?page=1">First</a>
                    <a href="?page=<%= currentPage - 1 %>">Previous</a>
                <% } %>
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <a href="?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
                <% } %>
                <% if (currentPage < totalPages) { %>
                    <a href="?page=<%= currentPage + 1 %>">Next</a>
                    <a href="?page=<%= totalPages %>">Last</a>
                <% } %>
            </div>
        <% } %>
    
