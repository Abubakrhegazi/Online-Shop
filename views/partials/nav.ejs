<nav>
    <section id="Header">
        <a href="#"><img src="/imgs/logo.png" alt="" class="logo"></a>

        <div class="search-container">
            <form class="search-form" action="/search" method="get" onsubmit="console.log(document.getElementById('aa').innerHTML)">
                <input
                 class="search"
                 type="text"
                 placeholder="Search for any product!"
                 name="query"
                 id="aa"
                 >
            </form>
            <div>
                <ul>

                </ul>
            </div>
        </div>
        <div>
            <ul id="navbar">
                <li><a href="/home" class="<%= currentPage === 'home' ? 'active' : '' %>">Home</a></li>
                <li><a href="/shop" class="<%= currentPage === 'shop' ? 'active' : '' %>">Shop</a></li>
                <li><a href="/about" class="<%= currentPage === 'about' ? 'active' : '' %>">About</a></li>
                <li><a href="/contact" class="<%= currentPage === 'contact' ? 'active' : '' %>">Contact</a></li>
