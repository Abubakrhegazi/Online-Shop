<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=title %></title>
    <link rel="stylesheet" href="/styles.css/SHOPcss.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />
</head>

<body>
    <%- include('./partials/nav.ejs') %>
    

    <div class="title">
        <h1>Welcome to <span>Our E-Commerce Storee</span></h1>
        <p>Discover amazing deals on your favorite products!</p>
    </div>

    <div class="slideshow-container">
        <div class="mySlides fade">
            <img src="../imgs/slideshow/ss1.avif " id="slide">
        </div>

        <div class="textonimage">
            <button class="ssl" onclick="prevSlide()"><i class="fa fa-angle-left"></i></button>
            <button class="ssr" onclick="nextSlide()"><i class="fa fa-angle-right"></i></button>
        </div>
    </div>


    <section id="product1" class="section-box">
        <% if(query){%>
        <h2>Displaying results for: <%=query%> </h2> 
        <%}else if(typeof query === 'undefined'){%>
        <h2>All Products</h2>
        <%}%>
        <p>Shop Now!</p>
        <div class="prod_grid">                       
            <% if (typeof data !== 'undefined' && data.length > 0) { %>
                <% data.forEach(item => { %>
                    <% if (item.name && item.price && item.description) { %>       
                        <div class="pro">
                            <a href="/details/<%= item._id %>">
                                <img class="proImg" src="<%= item.image || '/uploads/default.jpg' %>" alt="<%= item.name %> Image">
                            <div class="des">
                                <span><%= item.brand %></span>
                                <h5><%= item.name %></h5>
                                <div class="stars">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                </div>
                                <h4><p style="display: inline; font-size: 0.8em;">EGP </p><%= item.price %></h4>
                            </div>
                            </a>
                            <a href="/details/<%= item._id %>"><i class="fal fa-shopping-cart cart"></i></a>
                        </div>
                    <% } %>
                <% }) %>
                
            <% } else { %>
                <p>No results available.</p>
            <% } %>  
            
        </div>
        <% if (totalPages > 1) { %>
            <div class="pagination">
                <% if (currentPage > 1) { %>
                    <a href="?page=1">First</a>
                    <a href="?page=<%= currentPage - 1 %>">Previous</a>
                <% } %>
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <a href="?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
                <% } %>
                <% if (currentPage < totalPages) { %>
                    <a href="?page=<%= currentPage + 1 %>">Next</a>
                    <a href="?page=<%= totalPages %>">Last</a>
                <% } %>
            </div>
        <% } %>
    
        </div>
    </section>
    <hr>
    <section class="coupon-zone">
        <div class="c-img"><img src="imgs/models/couponimage.jpg"></div>
        <div class="coupon">
            <p>For Orders More Than 499 EGP:<span>EC10%</span></p>
            <p>For Orders More Than 749 EGP:<span>EC15%</span></p>
            <p>For Orders More Than 999 EGP:<span>EC20%</span></p>
            <p>For Orders Above 1599 EGP:<span>EC25%<br>Free Shipping</span></p>
        </div>
    </section>
    <hr>

    <section class="support-center">
        <div class="support-text">
            <strong>We're always Here To Help </strong>
            <h5>Reach out to us through any of these support channels</h5>
        </div>
        <div class="supports">
            <div>
                <p>Help center</p>
                <a href="#">Help@e-commerce.com</a>
            </div>
            <div>
                <p>Email Support</p>
                <a href="#">egypt@e-commerce.com</a>
            </div>
            <div>
                <p>Phone Support:</p>
                <p>16359</p>
            </div>
        </div>
    </section>
    <%- include('./partials/footer.ejs') %>

    </div>
    <script src="./scripts/shop.js"></script>
    <script src="./scripts/darkMode.js"></script>
    <script src="./scripts/filter.js"></script>

</body>

</html>