<body>
    <%- include('./partials/nav.ejs') %>
    <div class="moving-info1">
        <p>10% OFF ON YOUR FIRST ORDER</p>
    </div>

    <div class="categories">
        <div class="cat-list">
            <button id="all-cats">ALL CATEGORIES</button>
            <button class="m">MOBILES</button>
            <button class="mens">MEN</button>
            <a class="women" href="shop/women">WOMEN</a>
        </div>
    </div>

    <div class="title">
        <h1>Welcome to <span>Our E-Commerce Storee</span></h1>
        <p>Discover amazing deals on your favorite products!</p>
    </div>

    <div class="slideshow-container">
        <div class="mySlides fade">
            <img src="../imgs/slideshow/ss1.avif " id="slide">
        </div>

        <div class="textonimage">
            <button class="ssl" onclick="prevSlide()"><i class="fa fa-angle-left"></i></button>
            <button class="ssr" onclick="nextSlide()"><i class="fa fa-angle-right"></i></button>
        </div>
    </div>


    <section id="product1" class="section-box">
        <h2>Featured Products</h2>
        <p>Shop Now!</p>
        <div class="prod_grid">                       
            <% if (typeof data !== 'undefined' && data.length > 0) { %>
                <% data.forEach(item => { %>
                    <% if (item.name && item.price && item.description) { %>       
                        <div class="pro">
                            <a href="/details/<%= item._id %>"> <!-- Link wraps the image -->
                                <img class="proImg" src="<%= item.image || '/uploads/default.jpg' %>" alt="<%= item.name %> Image">
                            </a>
                            <div class="des">
                                <span><%= item.brand %></span>
                                <h5><%= item.name %></h5>
                                <div class="stars">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                </div>
                                <h4><p style="display: inline; font-size: 0.8em;">EGP </p><%= item.price %></h4>
                            </div>
                            <a href="/details/<%= item._id %>"><i class="fal fa-shopping-cart cart"></i></a>
                        </div>
                    <% } %>
                <% }) %>
            <% } else { %>
                <p>No results available.</p>
            <% } %>  
        </div>
    
    
